{
  "info": {
    "name": "SafeBoda Rwanda API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://127.0.0.1:8000" },
    { "key": "accessToken", "value": "" }
  ],
  "item": [
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/api/users/token/",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"Pass1234!\"\n}" }
      }
    },
    {
      "name": "Users - Me",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/users/me/",
        "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }]
      }
    },
    {
      "name": "Locations - Nearby",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/api/locations/drivers/nearby/",
        "header": [
          { "key": "Authorization", "value": "Bearer {{accessToken}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"lat\": -1.9441,\n  \"lng\": 30.0619,\n  \"radius_km\": 3,\n  \"limit\": 5\n}"
        }
      }
    },
    {
      "name": "Rides - Request",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/api/rides/request/",
        "header": [
          { "key": "Authorization", "value": "Bearer {{accessToken}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"pickup_lat\": -1.9441,\n  \"pickup_lng\": 30.0619,\n  \"dropoff_lat\": -1.9532,\n  \"dropoff_lng\": 30.0947\n}"
        }
      }
    },
    {
      "name": "Cache - Stats",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/cache/stats/",
        "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }]
      }
    }
  ]
}
